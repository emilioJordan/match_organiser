# Ignore bundler config.
/.bundle

# Ignore all logfiles and tempfiles.
/log/*
/tmp/*
!/log/.keep
!/tmp/.keep

# Ignore uploaded files in storage.
/storage/*
!/storage/.keep

# Ignore SQLite databases.
/*.sqlite3
/*.sqlite3-*
db/*.sqlite3
db/*.sqlite3-*

# Ignore master key for decrypting credentials and more.
/config/master.key

# Ignore PID and socket files.
/tmp/pids/*
/tmp/sockets/*
/tmp/cache/*

# Ignore system files.
/.byebug_history
*.swp
*.swo
*~

# Ignore node modules and yarn error logs.
/node_modules
/yarn-error.log

# Ignore coverage results.
/coverage/

# Ignore bundler vendor directory.
/vendor/bundle

# Ignore dotenv environment variables file.
/.env
.env.local
.env.*.local

# Ignore IDE/project settings
/.idea
/.vscode
