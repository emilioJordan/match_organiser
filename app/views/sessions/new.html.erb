<% content_for :title, "Anmelden - Match Organiser" %>

<div class="row justify-content-center">
  <div class="col-md-5">
    <div class="card">
      <div class="card-body">
        <h4 class="text-center mb-4">Anmelden</h4>
        
        <%= form_with url: login_path, local: true do |f| %>
          <div class="mb-3">
            <%= f.label :email, "E-Mail", class: "form-label" %>
            <%= f.email_field :email, class: "form-control", required: true %>
          </div>
          
          <div class="mb-3">
            <%= f.label :password, "Passwort", class: "form-label" %>
            <%= f.password_field :password, class: "form-control", required: true %>
          </div>
          
          <%= f.submit "Anmelden", class: "btn btn-primary w-100 mb-3" %>
        <% end %>
        
        <div class="text-center">
          <%= link_to "Noch kein Account? Hier registrieren", signup_path %>
        </div>
      </div>
    </div>
  </div>
</div>
